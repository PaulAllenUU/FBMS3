@model ParcelItemViewModel

<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ("/parcel","Parcels"),
    ($"/parcel/details/{Model.ParcelId}",$"{Model.ParcelId}"),
    ("","Add Items To Parcel")
}) />

<h3 class="mt-4 mb-4">Fill Parcel</h3>

<form asp-action="ParcelFill">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="ParcelId" class="form-control"/>

    <div class="mt-3">
        <label asp-for="StockId" class="form-label">Item To Add</label>      
        <select asp-for="StockId" class="form-control" 
                asp-items="@Model.Items"))">
            <option>Select Item</option>
        </select>
        <span asp-validation-for="StockId" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label asp-for="Quantity" class="form-label">Quantity</label>      
        <input asp-for="Quantity" class="form-control">
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

     <div class="mt-3">
        <label asp-for="CategoryId" class="form-label">Category</label>      
        <select asp-for="CategoryId" class="form-control" 
                asp-items="@Model.Categorys"))">
            <option>Select Category</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <input type="submit" value="Create" class="btn btn-primary"/>
        <a class="btn btn-secondary" asp-action="Details" asp-route-id="Model.Id">Cancel</a>
    </div>


</form>