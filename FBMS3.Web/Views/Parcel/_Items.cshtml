@if(Model.Items.Count == 0)
{
    <h5>There is no stock in this parcel , please add some </h5>
}
else
{
    <h3 class="mt-4 mb-4">Items Currently In This Parcel</h3>

        <div class="card rounded shadow p-4">

            <table class="table table-sm">

                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Quantity</th>


                    </tr>

                </thead>

                <tbody>
                    @foreach (var pi in Model.Items)
                    {
                        <tr>
                            <td>@pi.Item.Description</td>
                            <td>@pi.Quantity</td>

                            <td>
                                <form asp-action="ItemRemove" asp-route-id="@pi.Id">
                                    <button class=class="btn btn-sm btn-danger" type="submit">
                                        <i class="bi bi-trash"></i>

                                    </button>
                                </form>
                                    
                                
                        </td>

                        </tr>
                            
                    }
                </tbody>
            </table>

        </div>  
        

}