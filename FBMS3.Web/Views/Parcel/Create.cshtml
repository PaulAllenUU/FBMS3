@model ParcelCreateViewModel

<partial name="_Breadcrumbs" model=@(new [] 
{ ("/", "Home"), ("/parcel", "Parcel"), ("","Create") })>

<h3 class="mt-4 mb-4">Create Parcel</h3>

<form asp-action="Create">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

     <div class="mt-3">
        <label asp-for="UserId" class="form-label">Users</label>      
        <select asp-for="UserId" class="form-control" 
                asp-items="@Model.Users"))">
            <option>Select User</option>
        </select>
        <span asp-validation-for="ClientId" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label asp-for="ClientId" class="form-label">Clients</label>      
        <select asp-for="ClientId" class="form-control" 
                asp-items="@Model.Clients"))">
            <option>Select Client</option>
        </select>
        <span asp-validation-for="ClientId" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label asp-for="FoodBankId" class="form-label">Food Bank Location</label>      
        <select asp-for="FoodBankId" class="form-control" 
                asp-items="@Model.FoodBanks"))">
            <option>Select Food bank</option>
        </select>
        <span asp-validation-for="ClientId" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <input type="submit" value="Create" class="btn btn-primary"/>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </div>

</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}