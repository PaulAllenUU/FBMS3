@model StockSearchViewModel

<form asp-controller="Stock" asp-action="Index" class="d-flex flex-row align-items-center">
    <div class="form-check me-3">
        <input class="form-check-input" type="radio" asp-for="Range" value="@StockRange.ALL" selected>
        <label class="form-check-label" for="Range">All</label>
    </div>

    <div class="form-check me-3">
        <input class="form-check-input" type="radio" asp-for="Range" value="@StockRange.NONFOOD">
        <label class="form-check-label" for="Range">Non-Food Stock</label>
    </div>

    <div class="form-check me-3">
        <input class="form-check-input" type="radio" asp-for="Range" value="@StockRange.MEAT" >
        <label class="form-check-label" for="Range">Meat</label>
    </div>

    <div class="form-check me-3">
        <input class="form-check-input" type="radio" asp-for="Range" value="@StockRange.VEGETABLE" >
        <label class="form-check-label" for="Range">Vegetables</label>
    </div>

    <div class="form-check me-3">
        <input class="form-check-input" type="radio" asp-for="Range" value="@StockRange.CARBOHYDRATE" >
        <label class="form-check-label" for="Range">Carbohydrates</label>
    </div>

    <input class="form-control me-2" asp-for="Query" placeholder="Search..">
   
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
</form>