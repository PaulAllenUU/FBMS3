@model Stock

<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ("/stock","Stock"),
    ($"/stock/details/{Model.Id}",$"{Model.Id}"),
    ("","Delete")
}) />

<h3 class="mt-4 mb-4">Delete Item From Stock</h3>

<h4 class="mb-4">Are you sure you want to delete this item?</h4>

<div>

    <div>

        <dl class="row">       
            <dt class="col-5">Description</dt>
            <dd class="col-7">@Model.Description</dd>

            <dt class="col-5">Expiry Date</dt>
            <dd class="col-7">@Model.ExpiryDate</dd>
            
            <dt class="col-5">Quantity</dt>
            <dd class="col-7">@Model.Quantity</dd>
            
            <dt class="col-5">Food Bank Id</dt>
            <dd class="col-7">@Model.FoodBankId</dd>
        
        </dl>
    </div>

    <div class="mt-4">
        <form asp-action="DeleteConfirm" type="post">
            <input type="hidden" asp-for="Id"/>
            <input type="submit" value="Confirm" class="btn btn-danger" />
            <a class="btn btn-secondary" asp-controller="Stock" asp-action="Index" >Cancel</a>
        </form>
        
    </div>

</div>