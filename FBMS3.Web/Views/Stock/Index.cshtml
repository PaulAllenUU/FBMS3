@model StockSearchViewModel

<partial name="_Breadcrumbs" model=@(new [] { ("/", "Home"), ("/stock", "Stock"), ("","Index") })>

<h3>List Of All Stock</h3>

<div class="my-4 d-flex flex-row justify-content-between align-items-center">  
   <a asp-action="Create" class="btn btn-primary btn-sm">Add Stock</a>
   <partial name="_Search" /> 

</div>

<table class="table">

    <thead>
        <tr>

            <th>Id</th>
            <th>Location</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>ExpiryDate</th>

        </tr>

    </thead>

    <tbody>

        @foreach(var s in Model.Stock)
        {
            <tr>

                <td>@s.Id</td>
                <td>@s.FoodBank.StreetName</td>
                <td>@s.Description</td>
                <td>@s.Quantity</td>
                <td>@s.ExpiryDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@s.Id" >
                  <i class="bi bi-ticket-detailed"></i> Details
                    </a> 
                </td>

            </tr>
        }

    </tbody>

</table>
