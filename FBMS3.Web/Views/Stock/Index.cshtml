@model StockSearchViewModel

<partial name="_Breadcrumbs" model=@(new [] { ("/", "Home"), ("/stock", "Stock"), ("","Index") })>

<h3>List Of All Stock</h3>

<div class="my-4 d-flex flex-row justify-content-between align-items-center">  
   <a asp-action="Create" class="btn btn-primary btn-sm">Add Stock</a>
   <partial name="_Search" /> 

</div>

<table class="table">

    <thead>
        <tr>

            <th>Location</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Expiry Date</th>

        </tr>

    </thead>

    <tbody>

        @foreach(var s in Model.Stock)
        {
            <tr>

                <td>@s.FoodBank.StreetName</td>
                <td>@s.Description</td>
                <td>@s.Quantity</td>
                <td>@s.ExpiryDate.ToShortDateString()</td>
                <td>
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="View Stock Details" asp-controller="Stock" asp-action="Details" asp-route-id=@s.Id>View</a>

                    <a asp-controller="Stock" asp-action="Edit" asp-route-id=@s.Id>Edit</a>
                    
                    <a asp-controller="Stock" asp-action="Delete" asp-route-id=@s.Id>Delete</a>  
                </td>

            </tr>
        }

    </tbody>

</table>
