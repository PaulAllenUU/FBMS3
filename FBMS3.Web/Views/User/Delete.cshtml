@model User

<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ("/user","Users"),
    ($"/user/details/{Model.Id}",$"{Model.Id}"),
    ("","Delete")
}) />

<h3 class="mt-4 mb-4">Delete User Account</h3>

<h4 class="mb-4">Are you sure you want to delete this user account from the database? This cannot be undone!</h4>

<div>
    <div class="col card rounded shadow p-3">
        <dl class="row">       
            <dt class="col-5">First Name</dt>
            <dd class="col-7">@Model.FirstName</dd>

            <dt class="col-5">Second Name</dt>
            <dd class="col-7">@Model.SecondName</dd>
            
            <dt class="col-5">E mail Address</dt>
            <dd class="col-7">@Model.Email</dd>

            <dt class="col-5">Food bank Location</dt>
            <dd class="col-7">@Model.FoodBankStreetName</dd>

        </dl>
    </div>

    <div class="mt-4">
        <form asp-action="DeleteConfirm" type="post">
            <input type="hidden" asp-for="Id"/>
            <input type="submit" value="Confirm" class="btn btn-danger" />
            <a class="btn btn-secondary" asp-controller="FoodBank" asp-action="Index" >Cancel</a>
        </form>
    </div>

</div>