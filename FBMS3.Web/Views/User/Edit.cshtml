@model UserProfileViewModel

<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ("/foodbank","FoodBanks"),
    ($"/foodbank/details/{Model.Id}",$"{Model.Id}"),
    ("","Edit")
}) />

<h3 class="my-4">Edit User Account</h3>

<div class="card rounded shadow p-3">

    <form asp-action="Edit">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <!-- Hide Id because the user cannot change but needs to be in the form -->    
        <input type="hidden" asp-for="Id" class="form-control"/>

         <div class="mt-3">
            <label asp-for="FirstName" class="form-label">First name</label>
            <input asp-for="FirstName" class="form-control"/>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

         <div class="mt-3">
            <label asp-for="SecondName" class="form-label">Second name</label>
            <input asp-for="SecondName" class="form-control"/>
            <span asp-validation-for="SecondName" class="text-danger"></span>
        </div>

         <div class="mt-3">
            <label asp-for="Email" class="form-label">E mail Address</label>
            <input asp-for="Email" class="form-control"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mt-3">
        <label asp-for="FoodBankId" class="form-label">Food Bank</label>      
        <select asp-for="FoodBankId" class="form-control" 
                asp-items="@Model.FoodBanks"))">
            <option>Select Food Bank</option>
        </select>
        <span asp-validation-for="FoodBankId" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
            <label asp-for="Role" class="control-label"><i class="bi-person-badge-fill"></i> Role</label>
            <select asp-for="Role" asp-items="Html.GetEnumSelectList<Role>()" class="form-control">
                <option>Select Role</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

    </form>