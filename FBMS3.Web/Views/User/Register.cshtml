@model UserRegisterViewModel

<div class="card shadow p-4 mt-4">

    <h3 class="mb-3">Register</h3>

    <form asp-action="Register" method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="FirstName" class="control-label"><i class="bi-person-fill"></i> Name</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SecondName" class="control-label"><i class="bi-person-fill"></i> Name</label>
            <input asp-for="SecondName" class="form-control" />
            <span asp-validation-for="SecondName" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Email" class="control-label"><i class="bi-envelope-fill"></i> Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col form-group mt-3">
                <label asp-for="Password" class="control-label"><i class="bi-shield-lock-fill"></i> Password</label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

        <div class="col form-group mt-3">
                <label asp-for="PasswordConfirm" class="control-label">Password Confirm</label>
                <input type="password" asp-for="PasswordConfirm" class="form-control" />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
        
        <div class="col form-group mt-3">
                <label asp-for="FoodBankStreetName" class="control-label">Your Local Food Bank</label>
                <input type="password" asp-for="FoodBankStreetName" class="form-control" />
                <span asp-validation-for="FoodBankStreetName" class="text-danger"></span>
            </div>

        <div class="form-group mt-3">
            <label asp-for="Role" class="control-label"><i class="bi-person-badge-fill"></i> Role</label>
            <select asp-for="Role" asp-items="Html.GetEnumSelectList<Role>()" class="form-control">
                <option>Select Role</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <input type="submit" value="Register" class="btn btn-primary" />
            <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
