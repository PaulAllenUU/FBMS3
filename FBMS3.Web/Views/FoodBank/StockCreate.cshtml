@model Stock

<h3 class="mt-4">Add Stock </h3>

<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ("/foodbanks","FoodBanks"),
    ($"/foodbank/details/{Model.FoodBankId}",$"{Model.FoodBankId}"),
    ("","Add Stock")
}) />

<form asp-action="StockCreate">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
   
    <input type="hidden" asp-for="FoodBankId" class="form-control"/>

    <div class="mt-3">
            <label asp-for="Description" class="form-label">Description</label>
            <input asp-for="Description" class="form-control"/>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

    <div class="mt-3">
        <label asp-for="Quantity" class="form-label">Quantity</label>      
        <input asp-for="Quantity" class="form-control">
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label asp-for="ExpiryDate" class="form-label">Expiry Date</label>      
        <input asp-for="ExpiryDate" class="form-control">
        <span asp-validation-for="ExpiryDate" class="text-danger"></span>
    </div>
   
    <div class="mt-3">
        <input type="submit" value="Create" class="btn btn-primary"/>
        <a class="btn btn-secondary" asp-action="Details" asp-route-id="Model.FoodBankId">Cancel</a>
    </div>

</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
