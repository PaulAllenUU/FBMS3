@model FoodBank

<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ("/foodbank","FoodBanks"),
    ($"/foodbank/details/{Model.Id}",$"{Model.Id}"),
    ("","Edit")
}) />

<h3 class="my-4">Edit Student</h3>

<div class="card rounded shadow p-3">

    <form asp-action="Edit">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <!-- Hide Id because the user cannot change but needs to be in the form -->    
        <input type="hidden" asp-for="Id" class="form-control"/>

        <div class="mt-3">
            <label asp-for="StreetNumber" class="form-label"></label>
            <input asp-for="StreetNumber" class="form-control"/>
            <span asp-validation-for="StreetNumber" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="StreetName" class="form-label"></label>
            <input asp-for="StreetName" class="form-control"/>
            <span asp-validation-for="StreetName" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="PostCode" class="form-label"></label>
            <input asp-for="PostCode" class="form-control"/>
            <span asp-validation-for="PostCode" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <input type="submit" value="Save" class="btn btn-primary"/>
            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}