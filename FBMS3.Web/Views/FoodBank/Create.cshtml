@model FoodBank

<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ("/foodbank","FoodBanks"),
    ("","Create")
}) />

<h3 class="my-4">Add New Food Bank To Our Database</h3>

<div class="card rounded shadow p-3">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mt-3">
            <label asp-for="StreetNumber" class="form-label">Street Number</label>
            <input asp-for="StreetNumber" class="form-control"/>
            <span asp-validation-for="StreetNumber" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="StreetName" class="form-label">Street Name</label>
            <input asp-for="StreetName" class="form-control"/>
            <span asp-validation-for="StreetName" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="PostCode" class="form-label">Postcode</label>
            <input asp-for="PostCode" class="form-control"/>
            <span asp-validation-for="PostCode" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <input type="submit" value="Create" class="btn btn-primary"/>
            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
        </div>

    </form>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

