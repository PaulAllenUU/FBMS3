@model FoodBank
<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ("/foodbank","FoodBanks"),
    ($"/foodbank/details/{Model.Id}",$"{Model.Id}"),
    ("","Delete")
}) />

<h3 class="mt-4 mb-4">Delete Food Bank</h3>

<h4 class="mb-4">Are you sure you want to delete this Food bank from the database?</h4>

<div>
    <div class="col card rounded shadow p-3">
        <dl class="row">       
            <dt class="col-5">Street Number</dt>
            <dd class="col-7">@Model.StreetNumber</dd>

            <dt class="col-5">Street Name</dt>
            <dd class="col-7">@Model.StreetName</dd>
            
            <dt class="col-5">Postcode</dt>
            <dd class="col-7">@Model.PostCode</dd>
        </dl>
    </div>

    <div class="mt-4">
        <form asp-action="DeleteConfirm" type="post">
            <input type="hidden" asp-for="Id"/>
            <input type="submit" value="Confirm" class="btn btn-danger" />
            <a class="btn btn-secondary" asp-controller="FoodBank" asp-action="Index" >Cancel</a>
        </form>
    </div>

</div>