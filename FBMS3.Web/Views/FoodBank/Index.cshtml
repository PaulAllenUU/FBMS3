@model FoodBankSearchViewModel

<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ("","FoodBanks")
}) />

<h3 class="mb-3">List Of Our Food Bank Locations</h3>

<div class="my-4 d-flex flex-row justify-content-between align-items-center">  
   <a asp-action="Create" class="btn btn-primary btn-sm">Add Food Bank</a>   
   <partial name="_Search" /> <!-- add partial to search foodbanks -->
</div>


<table class="table table-hover">
    <thead>
        <tr>
            <th>Street Number</th>
            <th>Street Name</th>
            <th>Post Code</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var f in Model.FoodBanks)
        {
            <tr>
                <td>@f.StreetNumber</td>
                <td>@f.StreetName</td>
                <td>@f.PostCode</td>
                <td>

                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="View Foodbank Details" asp-controller="FoodBank" asp-action="Details" asp-route-id=@f.Id>View</a>

                    <a asp-controller="FoodBank" asp-action="Edit" asp-route-id=@f.Id>Edit</a>
                    
                    <a asp-controller="FoodBank" asp-action="Delete" asp-route-id=@f.Id>Delete</a>    

                </td>
            </tr>
            
        }
    </tbody>
</table>

