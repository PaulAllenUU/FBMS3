@model FoodBank

<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ("/foodbank","FoodBanks"),
    ($"/foodbank/details/{Model.Id}",$"{Model.Id}"),
    ("","Details")
}) />

<h3 class="mt-4 mb-4">Food Bank Details</h3>
<div class="row">
    <!-- Details -->
    <div class="col-8 card rounded shadow p-3">
        <dl class="row">
            <dt class="col-5">Street Number</dt>
            <dd class="col-7">@Model.StreetNumber</dd>

            <dt class="col-5">Street Name</dt>
            <dd class="col-7">@Model.StreetName</dd>

            <dt class="col-5">Postcode</dt>
            <dd class="col-7">@Model.PostCode</dd>
        </dl>

        <div class="mt-4 d-flex flex-row justify-content-between">
            <div>
              
                <!-- navigation link to CreateTicket action, passing correct route parameter -->
                <a asp-action="StockCreate" asp-route-id="@Model.Id" class="me-3" >
                    <i class="bi bi-bag-plus"></i> Add Stock
                </a>         

                <!-- navigation link to Details action, passing the correct route id parameter -->
                <a asp-controller="FoodBank" 
                   asp-action="Edit" asp-route-id="@Model.Id" class="me-3">
                    <i class="bi bi-pen"></i> Edit
                </a>

                <!-- navigation link to redirect to Index action -->
                <a asp-controller="FoodBank" asp-action="Index">
                    <i class="bi bi-list"></i> FoodBanks
                </a>
            </div>

            <div>

                <button type="button" class="btn btn-sm btn-danger"
                data-bs-toggle="modal" data-bs-target="#deleteFoodBankModal">
                <i class="bi bi-trash"></i> Delete
                </button>

            </div>
        </div>

    </div>
</div>

<!-- Stock currently in that food bank -->
<div class="row pt-3">
    <partial name="_Stock" />
</div>

<!-- Delete modal for deleting this food bank -->
<partial name="_DeleteModal" />