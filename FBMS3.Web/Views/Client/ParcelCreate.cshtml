@model Parcel

<h3 class="mt-4 mb-4">Add Parcel</h3>

<form asp-action="ParcelCreate">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="ClientId" class="form-control"/>

    <div class="form-group">
        @Model.ClientSecondName
    </div>

    <div class="form-group">
        <label asp-for="Items" class="control-label"></label>      
        <input asp-for="Items" class="form-control"></textarea>
        <span asp-validation-for="Items" class="text-danger"></span>
    </div>


    <div class="mt-3">
        <input type="submit" value="Add" class="btn btn-primary"/>
    </div>

</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}