@model Client

<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ("/client","Clients"),
    ($"/client/details/{Model.Id}",$"{Model.Id}"),
    ("","Details")
}) />

<div class="col card rounded shadow-lg p-4">

    <h3 class="mb-4">Client Details</h3>

    <dl class="row">

        <dt class="col-4">Family Name</dt>
        <dd class="col-8">@Model.SecondName</dd>

        <dt class="col-4">Post code</dt>
        <dd class="col-8">@Model.PostCode</dd>

        <dt class="col-4">E-mail Address</dt>
        <dd class="col-8">@Model.EmailAddress</dd>

        <dt class="col-4">No. Of People</dt>
        <dd class="col-8">@Model.NoOfPeople</dd>

        <dt class="col-4">Preferred Food Bank</dt>
        <dd class="col-8">@Model.FoodBankStreetName</dd>    
    
    </dl>

    <div class="mt-4 d-flex flex-row justify-content-between">
        <div>

            <div class="mt-4"> 
                <a class="btn btn-link" asp-action="Index">Cancel</a>
            
            </div>

            <a asp-action="ParcelCreate" asp-route-id=@Model.Id  class="me-3">
                <i class="bi bi-plus"></i> Add Parcel
                </a> 
            
            <div>
                <button type="button" class="btn btn-sm btn-danger"
                data-bs-toggle="modal" data-bs-target="#deleteClientModal">
                <i class="bi bi-trash"></i> Delete
                </button>
                
            </div>

        </div>

    </div>


</div>

